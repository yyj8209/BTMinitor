<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e3e3" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#04c9e2">

        <Button
            android:id="@+id/settings"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:background="@drawable/app_incon_bluetooth1" />

        <Button
            android:id="@+id/search"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:background="@drawable/butto"
            android:text="@string/search"
            android:textColor="#04c9e2"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/discoverable1"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/butto"
            android:text="@string/discoverable1"
            android:textColor="#04c9e2"
            android:textStyle="bold"
            android:textSize="15dp" />

    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line_chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="3dp" >

        <CheckBox
            android:id="@+id/in16"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="16进制显示"
            android:textSize="15dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:checked="true"
            style="@style/checkboxsy"
            />
        <CheckBox
            android:id="@+id/out16"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="@string/out16"
            android:textSize="15dp"
            android:textColor="#000000"
            android:checked="true"
            android:layout_weight="1"
            style="@style/checkboxsy"/>

        <CheckBox
            android:id="@+id/autosend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/autosend"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_weight="1"
            style="@style/checkboxsy"
            android:layout_marginRight="3dp"
            />
    </LinearLayout>
</LinearLayout>